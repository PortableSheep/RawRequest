/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "module": "ES2022",
    "moduleResolution": "node",
    "isolatedModules": true,
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@wailsjs/*": ["wailsjs/*"],
      "@angular/cdk/scrolling": ["node_modules/@angular/cdk/types/scrolling.d.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
